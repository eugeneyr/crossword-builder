<?xml version="1.0" encoding="UTF-8"?>
<project name="crossword-builder" default="all">
  
  
  <property file="crossword-builder.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.lib.classpath">
    <pathelement location="${basedir}/lib/annotations-2.0.1.jar"/>
    <pathelement location="${basedir}/lib/guava-15.0.jar"/>
    <pathelement location="${basedir}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${basedir}/lib/javassist-3.19.0-GA.jar"/>
    <pathelement location="${basedir}/lib/junit-4.12-javadoc.jar"/>
    <pathelement location="${basedir}/lib/junit-4.12-sources.jar"/>
    <pathelement location="${basedir}/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/lib/reflections-0.9.10-javadoc.jar"/>
    <pathelement location="${basedir}/lib/reflections-0.9.10-sources.jar"/>
    <pathelement location="${basedir}/lib/reflections-0.9.10.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  <!-- Modules -->
  
  
  <!-- Module crossword-builder -->
  
  <dirname property="module.crossword-builder.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.crossword-builder" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.crossword-builder" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.crossword-builder" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.crossword-builder" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="crossword-builder.output.dir" value="${module.crossword-builder.basedir}/out/production/crossword-builder"/>
  <property name="crossword-builder.testoutput.dir" value="${module.crossword-builder.basedir}/out/test/crossword-builder"/>
  
  <path id="crossword-builder.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="crossword-builder.module.production.classpath">
    <path refid="${module.jdk.classpath.crossword-builder}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="crossword-builder.runtime.production.module.classpath">
    <pathelement location="${crossword-builder.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="crossword-builder.module.classpath">
    <path refid="${module.jdk.classpath.crossword-builder}"/>
    <pathelement location="${crossword-builder.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="crossword-builder.runtime.module.classpath">
    <pathelement location="${crossword-builder.testoutput.dir}"/>
    <pathelement location="${crossword-builder.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.crossword-builder">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.crossword-builder">
    <patternset refid="excluded.from.module.crossword-builder"/>
  </patternset>
  
  <path id="crossword-builder.module.sourcepath">
    <dirset dir="${module.crossword-builder.basedir}">
      <include name="src/java/test"/>
      <include name="src/java/main"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.crossword-builder" depends="compile.module.crossword-builder.production,compile.module.crossword-builder.tests" description="Compile module crossword-builder"/>
  
  <target name="compile.module.crossword-builder.production" description="Compile module crossword-builder; production classes">
    <mkdir dir="${crossword-builder.output.dir}"/>
    <javac destdir="${crossword-builder.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.crossword-builder}/javac">
      <compilerarg line="${compiler.args.crossword-builder}"/>
      <bootclasspath refid="crossword-builder.module.bootclasspath"/>
      <classpath refid="crossword-builder.module.production.classpath"/>
      <src refid="crossword-builder.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.crossword-builder"/>
    </javac>
    
    <copy todir="${crossword-builder.output.dir}">
      <fileset dir="${module.crossword-builder.basedir}/src/java/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.crossword-builder.basedir}/src/java/main">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.crossword-builder.tests" depends="compile.module.crossword-builder.production" description="compile module crossword-builder; test classes" unless="skip.tests"/>
  
  <target name="clean.module.crossword-builder" description="cleanup module">
    <delete dir="${crossword-builder.output.dir}"/>
    <delete dir="${crossword-builder.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.crossword-builder" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.crossword-builder" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>